{
  "vueCompilerOptions": {
    "target": 2.7
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "test/**/*.tsx",
    "test/**/*.vue",
    "index.d.ts",
    "component.g.d.ts"
  ]
}